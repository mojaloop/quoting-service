{
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 13
  },
  "env": {
    "es2022": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "no-console": ["error"],
    "indent": [2, 2, { "SwitchCase": 1 }],
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "never"]
  }
}
